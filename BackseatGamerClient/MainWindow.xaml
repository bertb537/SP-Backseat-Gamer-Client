<Window x:Class="BackseatGamerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackseatGamerClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="350" MinWidth="600">
    <Window.Resources>
        <ControlTemplate x:Key="HomeScreen"></ControlTemplate>
        <ControlTemplate x:Key="TrackingScreen"></ControlTemplate>
        <ControlTemplate x:Key="StatisticsScreen"></ControlTemplate>
    </Window.Resources>
    <Grid Background="#15171E">
        <Frame x:Name="MainContentControl" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
